<Window x:Class="DelaunayTriangulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelaunayTriangulation"
        mc:Ignorable="d"
        Title="DelaunayTriangulation" Height="450" Width="800">
    <Grid x:Name="MainGrid" Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image Name="image" Grid.Column="0" Grid.Row="0"  Grid.ColumnSpan="2" Grid.RowSpan="6" Margin="15 15"/>
        <Button x:Name="buttonFromFin" Grid.Row="0" Grid.Column="2" Margin="0.4,10,14.6,10.4" Height="Auto" Click="buttonFromFin_Click" Cursor="Hand">Ввод точек из файла</Button>
        <Button x:Name="buttonFromRandom" Grid.Row="1" Grid.Column="2" Margin="0.4,10.2,14.6,10.2" Height="Auto" Click="buttonFromRandom_Click">Генерация</Button>
        <Button x:Name="buttonTriangulation" Grid.Row="2" Grid.Column="2" Margin="0.4,9.8,14.6,9.8" Click="buttonTriangulation_Click" Height="Auto" Cursor="Hand">Триангуляция</Button>
        <Button x:Name="buttonMinimumSpanningTree" Grid.Row="3" Grid.Column="2" Margin="0.4,9.6,14.6,10" Click="buttonMinimumSpanningTree_Click" Height="Auto">Минимальное остовное дерево</Button>
        <Button x:Name="buttonClear" Grid.Row="4" Grid.Column="2" Margin="0.4,9.6,14.6,10" Click="buttonClear_Click" Height="Auto" Cursor="Hand">Очистить</Button>
        <Button x:Name="buttonFout" Grid.Row="5" Grid.Column="2" Margin="0.4,9.8,14.6,9.8" Click="buttonFout_Click" Height="Auto">Вывод точек в файл</Button>
    </Grid>
</Window>
